<Window x:Class="OpenTimelapseSort.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTimelapseSort.Views"
        xmlns:viewModels="clr-namespace:OpenTimelapseSort.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="750" 
        Width="1150" 
        FontFamily="Montserrat"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0">

    <Window.Resources>
        <Style x:Key="ScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
        </Style>

        <DataTemplate x:Uid="Name" x:Key="TestTemplate">
            <Label x:Name="Import_Name" Grid.Column="0" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383"/>
        </DataTemplate>

        <!-- Import Visual Template -->
        <DataTemplate x:Key="SelectButtonColumnDataTemplate">
            <DockPanel Background="#34404D" Height="100" Width="402">
                <Grid DockPanel.Dock="Top">
                    <DockPanel>
                        <Label x:Name="Import_Name" Grid.Column="0" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383"/>
                        <Button Content="Select" DockPanel.Dock="Right"/>
                    </DockPanel>
                </Grid>
                <Grid DockPanel.Dock="Bottom">
                    <Label Grid.Column="0" Content="OpenTimelapseSort" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383"/>
                </Grid>
            </DockPanel>
        </DataTemplate>

        <Style x:Key="HeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18px"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubHeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12px"/>
            <Setter Property="Foreground" Value="Coral"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PanelTemplate" TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="#FF34404D"/>
        </Style>

    </Window.Resources>

    <Grid x:Name="Pane" Background="#34404D" Height="Auto" >
        <Grid x:Name="MenuBar" VerticalAlignment="Top" Height="39">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="application_name" Grid.Column="0" Content="OpenTimelapseSort" HorizontalAlignment="Left" Margin="0,2,0,-2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">
            </Label>
            <Button x:Name="preferences_btn" Content="Preferences" HorizontalAlignment="Left" Margin="197,7,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Foreground="White" Background="#FF3D4A59" Click="InvokePreferences" Width="95" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="import_btn" Content="Import new" HorizontalAlignment="Left" Margin="296,7,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeImportPopup">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Ellipse x:Name="close_btn" HorizontalAlignment="Left" Height="17" Margin="1113,14,0,0" VerticalAlignment="Top" Width="17" Fill="#FFFF5252" MouseDown="closeApplication"/>
            <Ellipse x:Name="minimize_btn" HorizontalAlignment="Left" Height="17" Margin="1091,14,0,0" VerticalAlignment="Top" Width="17" Fill="Coral" MouseDown="minimizeApplication"/>
            <Rectangle HorizontalAlignment="Left" Height="44" Margin="394,0,0,0" Width="667" MouseDown="moveWindow" Fill="#FF34404D"/>
        </Grid>
        <DockPanel x:Name="LeftPanel" Background=" #3D4A59" Margin="0,44,0,0">
            <ScrollViewer x:Name="DirectoryViewer"  Style="{StaticResource ScrollViewerStyle}">
                <ListView x:Name="DirectoryViewer1" Height="Auto" Background="#FF3D4A59" BorderBrush="#FF34404D" MouseDoubleClick="DirectoryViewer1_OnMouseDoubleClick" Foreground="#FFED6558"/>
            </ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </DockPanel>
        <Grid  DockPanel.Dock="Bottom" />
        <DockPanel x:Name="RightPanel" Background=" #3D4A59" Margin="397,44,0,37">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="directory_headline1" Content="Nothing to import&#xA;" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" Height="44" Width="434" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="34,23,0,0"/>
                <ScrollViewer x:Name="ImageViewer"  Style="{StaticResource ScrollViewerStyle}" Margin="0,147,-254,0">
                    <ListView x:Name="ImageViewer1" Height="517" Background="#FF3D4A59" BorderBrush="{x:Null}" Foreground="#FFED6558" IsSynchronizedWithCurrentItem="False" Width="691"/>
                </ScrollViewer>
                <Label x:Name="directory_prefix1" Content="Path:" DockPanel.Dock="Top" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383" Margin="24,96,0,595" Width="94"/>
                <Label x:Name="directory_name1_Copy" Content="C:/Users/bjarn/Default" VerticalContentAlignment="Top" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383" Height="24" Width="323" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Top" Margin="34,72,0,0"/>

            </Grid>
        </DockPanel>
        <!-- Popup Screen Elements -->
        <Popup Name="Import_Popup" Width="Auto" Height="250" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="15" Grid.Row="0" Background="#34404D">
                    <Label x:Name="import_headline1" Content="New Import" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                    <TextBlock x:Name="Import_Target" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">
                        Default
                    </TextBlock>
                </DockPanel>
                <DockPanel Margin="15" Grid.Row="1">
                    <Button x:Name="Choose_Directory_Btn" Content="Choose" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeTargetChooser">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Import_Abort_Btn" Content="Cancel" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeImportPopup">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Import_Confirm_Btn" IsEnabled="False" Content="Confirm" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FFFF8383" Foreground="#FF3D4A59" Width="95" BorderBrush="{x:Null}" Click="ConfirmImportSettings">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup Name="Warning_Popup" Width="Auto" Height="250" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="15" Grid.Row="0" Background="#34404D">
                    <Label x:Name="Error_Head" Content="" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                    <TextBlock x:Name="Error_Desc" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">

                    </TextBlock>
                </DockPanel>
                <DockPanel Margin="15" Grid.Row="1">
                    <Button x:Name="Error_Btn" Content="Ok" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FFFF8383" Foreground="#FF3D4A59" Width="95" BorderBrush="{x:Null}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup Name="Import_Progress_Popup" Width="Auto" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="20" Grid.Row="0" Background="#34404D">
                    <Grid DockPanel.Dock="Top">
                        <Label Content="Ready?" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="36" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                        <TextBlock x:Name="Import_Progress_Count" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="18" Foreground="#FFFF8383">
                        processing...
                        </TextBlock>
                    </Grid>
                    <Grid DockPanel.Dock="Bottom">
                        <TextBlock x:Name="Sorting_Countdown" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,-2" Padding="60,0,60,0" FontWeight="Bold" FontSize="56" Foreground="#FFFF8383">
                        10
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </Grid>
        </Popup>
    </Grid>
</Window>
