<Window x:Class="OpenTimelapseSort.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTimelapseSort.Views"
        xmlns:viewModels="clr-namespace:OpenTimelapseSort.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="750" 
        Width="1150" 
        FontFamily="Montserrat"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0">

    <Window.Resources>
        <Style x:Key="ScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
        </Style>
    </Window.Resources>

    <Grid x:Name="Pane" Background="#34404D" Height="Auto" >
        <Grid x:Name="MenuBar" VerticalAlignment="Top" Height="39">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="application_name" Grid.Column="0" Content="OpenTimelapseSort" HorizontalAlignment="Left" Margin="0,2,0,-2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">
            </Label>
            <Button x:Name="preferences_btn" Content="Preferences" HorizontalAlignment="Left" Margin="197,7,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Foreground="White" Background="#FF3D4A59" Click="InvokePreferences" Width="95" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="import_btn" Content="Import new" HorizontalAlignment="Left" Margin="296,7,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeImportPopup">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Ellipse x:Name="close_btn" HorizontalAlignment="Left" Height="17" Margin="1113,14,0,0" VerticalAlignment="Top" Width="17" Fill="#FFFF5252" MouseDown="closeApplication"/>
            <Ellipse x:Name="minimize_btn" HorizontalAlignment="Left" Height="17" Margin="1091,14,0,0" VerticalAlignment="Top" Width="17" Fill="Coral" MouseDown="minimizeApplication"/>
            <Rectangle HorizontalAlignment="Left" Height="44" Margin="394,0,0,0" Width="667" MouseDown="moveWindow" Fill="#FF34404D"/>
        </Grid>
        <DockPanel x:Name="LeftPanel" Background=" #3D4A59" Margin="0,44,0,0">
            <ScrollViewer x:Name="DirectoryViewer"  Style="{StaticResource ScrollViewerStyle}" Width="398">
                <ItemsControl x:Name="directoryControl" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </DockPanel>
        <Grid  DockPanel.Dock="Bottom" >
            <ProgressBar x:Name="Progress_Bar" Maximum="10" Value="{Binding Path=ProgressValue, Mode=TwoWay}" Background="#FF34404D" BorderBrush="{x:Null}" Width="650" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="414,0,0,0" />
            <TextBox x:Name="Progress_Value" Text="{Binding Path=ProgressValue, Mode=TwoWay}" HorizontalAlignment="Left" Margin="1064,712,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="86" Height="38"/>
        </Grid>
        <DockPanel x:Name="RightPanel" Background=" #3D4A59" Margin="397,44,0,37">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="directory_headline1" Content="Nothing to import&#xA;" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" Height="49" Width="434" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                <Label x:Name="directory_prefix1" Content="Path:" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383" Margin="24,96,0,595" Width="94"/>
                <Label x:Name="directory_name1" Content="C:/Users/bjarn/Default" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Normal" FontSize="14px" Foreground="#FFFF8383" Margin="71,94,0,590" Width="224"/>
                <ScrollViewer x:Name="DirectoryDetailViewer"  Style="{StaticResource ScrollViewerStyle}" Margin="18,160,-284,0" Panel.ZIndex="1">
                    <ItemsControl x:Name="imageControl" VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DockPanel>
        <!-- Popup Screen Elements -->
        <Popup Name="Import_Popup" Width="Auto" Height="250" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="15" Grid.Row="0" Background="#34404D">
                    <Label x:Name="import_headline1" Content="New Import" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                    <TextBlock x:Name="Import_Target" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">
                        Default
                    </TextBlock>
                </DockPanel>
                <DockPanel Margin="15" Grid.Row="1">
                    <Button x:Name="Choose_Directory_Btn" Content="Choose" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeTargetChooser">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Import_Abort_Btn" Content="Cancel" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FF3D4A59" Foreground="#FFFF8383" Width="95" BorderBrush="{x:Null}" Click="InvokeImportPopup">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Import_Confirm_Btn" IsEnabled="False" Content="Confirm" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FFFF8383" Foreground="#FF3D4A59" Width="95" BorderBrush="{x:Null}" Click="ConfirmImportSettings">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup Name="Warning_Popup" Width="Auto" Height="250" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="15" Grid.Row="0" Background="#34404D">
                    <Label x:Name="Error_Head" Content="" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                    <TextBlock x:Name="Error_Desc" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">

                    </TextBlock>
                </DockPanel>
                <DockPanel Margin="15" Grid.Row="1">
                    <Button x:Name="Error_Btn" Content="Ok" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FFFF8383" Foreground="#FF3D4A59" Width="95" BorderBrush="{x:Null}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup Name="Import_Progress_Popup" Width="Auto" Height="350" IsOpen="False" PlacementTarget="{Binding ElementName=Pane}" Placement="Center">
            <Grid Background="#34404D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="15" Grid.Row="0" Background="#34404D">
                    <Label Content="Images found" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Padding="20,0,20,0" FontWeight="Bold" FontSize="35" Foreground="#FFFF8383" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,24,0,0"/>
                    <TextBlock x:Name="Import_Progress_Count" Grid.Column="0" HorizontalAlignment="Left" Margin="0,2,0,-2" Padding="20,0,20,0" FontWeight="Bold" FontSize="14px" Foreground="#FFFF8383">
                        Processing...
                    </TextBlock>
                </DockPanel>
                <DockPanel Margin="15" Grid.Row="1">
                    <Button x:Name="Import_Progress_Btn" IsEnabled="False" Content="Begin Import" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="10,0,10,0" Background="#FFFF8383" Foreground="#FF3D4A59" Width="195" BorderBrush="{x:Null}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
    </Grid>
</Window>
