<Window
    x:Class="OpenTimelapseSort.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1150"
    Height="750"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    FontFamily="Montserrat"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
        </Style>

        <Style x:Key="HeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="18px" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="SubHeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12px" />
            <Setter Property="Foreground" Value="Coral" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="PanelTemplate" TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="#FF34404D" />
        </Style>

    </Window.Resources>

    <Grid
        x:Name="Pane"
        Height="Auto"
        Background="#34404D">
        <Grid
            x:Name="MenuBar"
            Height="39"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="application_name"
                Grid.Column="0"
                Margin="0,2,0,-2"
                Padding="20,0,20,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="OpenTimelapseSort"
                FontSize="14px"
                FontWeight="Bold"
                Foreground="#FFFF8383" />
            <Button
                x:Name="preferences_btn"
                Width="95"
                Margin="197,7,0,3"
                Padding="10,0,10,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#FF3D4A59"
                BorderBrush="{x:Null}"
                Click="InvokePreferences"
                Content="Preferences"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <Button
                x:Name="import_btn"
                Width="95"
                Margin="296,7,0,3"
                Padding="10,0,10,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#FF3D4A59"
                BorderBrush="{x:Null}"
                Click="InvokeImportPopup"
                Content="Import new"
                Foreground="#FFFF8383">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <Ellipse
                x:Name="close_btn"
                Width="17"
                Height="17"
                Margin="1113,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#FFFF5252"
                MouseDown="closeApplication" />
            <Ellipse
                x:Name="minimize_btn"
                Width="17"
                Height="17"
                Margin="1091,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="Coral"
                MouseDown="minimizeApplication" />
            <Rectangle
                Width="667"
                Height="44"
                Margin="394,0,0,0"
                HorizontalAlignment="Left"
                Fill="#FF34404D"
                MouseDown="MoveWindow" />
        </Grid>
        <DockPanel
            x:Name="LeftPanel"
            Margin="0,44,0,0"
            Background=" #3D4A59">
            <ScrollViewer
                x:Name="DirectoryViewer"
                CanContentScroll="True"
                MouseWheel="ImageViewer_OnPreviewMouseDown"
                Style="{StaticResource ScrollViewerStyle}">
                <ListView
                    x:Name="DirectoryViewer1"
                    Height="Auto"
                    Background="#FF3D4A59"
                    BorderBrush="#FF34404D"
                    Foreground="#FFED6558"
                    MouseDoubleClick="DirectoryViewer1_OnMouseDoubleClick" />
            </ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
            </Grid>
        </DockPanel>
        <Grid DockPanel.Dock="Bottom" />
        <DockPanel
            x:Name="RightPanel"
            Margin="415,44,0,31"
            Background=" #3D4A59">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="directory_headline1"
                    Width="434"
                    Height="44"
                    Margin="34,23,0,0"
                    Padding="20,0,20,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Content="Nothing to import&#xA;"
                    DockPanel.Dock="Top"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White" />
                <ScrollViewer
                    x:Name="ImageViewer"
                    Margin="0,147,-254,0"
                    CanContentScroll="True"
                    MouseWheel="ImageViewer_OnPreviewMouseDown"
                    Style="{StaticResource ScrollViewerStyle}">
                    <ListView
                        x:Name="ImageViewer1"
                        Width="691"
                        Height="517"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Foreground="#FFED6558"
                        IsSynchronizedWithCurrentItem="False" />
                </ScrollViewer>
                <Label
                    x:Name="directory_prefix1"
                    Width="94"
                    Margin="24,96,0,595"
                    Padding="20,0,20,0"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Top"
                    Content="Path:"
                    DockPanel.Dock="Top"
                    FontSize="14px"
                    FontWeight="Bold"
                    Foreground="#FFFF8383" />
                <Label
                    x:Name="directory_name1_Copy"
                    Width="323"
                    Height="24"
                    Margin="34,72,0,0"
                    Padding="20,0,20,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Content="C:/Users/bjarn/Default"
                    FontSize="14px"
                    FontWeight="Bold"
                    Foreground="#FFFF8383" />

            </Grid>
        </DockPanel>
        <!--  Popup Screen Elements  -->
        <Popup
            Name="Import_Popup"
            Width="Auto"
            Height="250"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="15"
                    Background="#34404D">
                    <Label
                        x:Name="import_headline1"
                        Margin="0,24,0,0"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Top"
                        Content="New Import"
                        DockPanel.Dock="Top"
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White" />
                    <TextBlock
                        x:Name="Import_Target"
                        Grid.Column="0"
                        Margin="0,2,0,-2"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        FontSize="14px"
                        FontWeight="Bold"
                        Foreground="#FFFF8383">
                        Default
                    </TextBlock>
                </DockPanel>
                <DockPanel Grid.Row="1" Margin="15">
                    <Button
                        x:Name="Choose_Directory_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Click="InvokeTargetChooser"
                        Content="Choose"
                        Foreground="#FFFF8383">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button
                        x:Name="Import_Abort_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Click="InvokeImportPopup"
                        Content="Cancel"
                        Foreground="#FFFF8383">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button
                        x:Name="Import_Confirm_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FFFF8383"
                        BorderBrush="{x:Null}"
                        Click="ConfirmImportSettings"
                        Content="Confirm"
                        Foreground="#FF3D4A59"
                        IsEnabled="False">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup
            Name="Warning_Popup"
            Width="Auto"
            Height="250"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="15"
                    Background="#34404D">
                    <Label
                        x:Name="Error_Head"
                        Margin="0,24,0,0"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Top"
                        Content=""
                        DockPanel.Dock="Top"
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White" />
                    <TextBlock
                        x:Name="Error_Desc"
                        Grid.Column="0"
                        Margin="0,2,0,-2"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        FontSize="14px"
                        FontWeight="Bold"
                        Foreground="#FFFF8383" />
                </DockPanel>
                <DockPanel Grid.Row="1" Margin="15">
                    <Button
                        x:Name="Error_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FFFF8383"
                        BorderBrush="{x:Null}"
                        Content="Ok"
                        Foreground="#FF3D4A59">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup
            Name="Import_Progress_Popup"
            Width="Auto"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="20"
                    Background="#34404D">
                    <Grid DockPanel.Dock="Top">
                        <Label
                            Margin="0,24,0,0"
                            Padding="20,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Content="Ready?"
                            DockPanel.Dock="Top"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="White" />
                        <TextBlock
                            x:Name="Import_Progress_Count"
                            Grid.Column="0"
                            Margin="0,2,0,-2"
                            Padding="20,0,20,0"
                            HorizontalAlignment="Left"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FFFF8383">
                            processing...
                        </TextBlock>
                    </Grid>
                    <Grid DockPanel.Dock="Bottom">
                        <TextBlock
                            x:Name="Sorting_Countdown"
                            Grid.Column="0"
                            Margin="0,2,0,-2"
                            Padding="60,0,60,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="56"
                            FontWeight="Bold"
                            Foreground="#FFFF8383">
                            10
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </Grid>
        </Popup>
    </Grid>
</Window>
