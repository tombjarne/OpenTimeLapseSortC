<Window
    x:Class="OpenTimelapseSort.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1150"
    Height="750"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    FontFamily="Montserrat"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Scrollbar Thumbs  -->
        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid x:Name="Grid">
                            <Rectangle
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="Transparent" />
                            <Border
                                x:Name="Rectangle1"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Horizontal">
                                <Setter TargetName="Rectangle1" Property="Width" Value="Auto" />
                                <Setter TargetName="Rectangle1" Property="Height" Value="7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  ScrollBars  -->
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="Foreground" Value="#FFFF8383" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid
                            x:Name="GridRoot"
                            Width="8"
                            Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.00001*" />
                            </Grid.RowDefinitions>
                            <Track
                                x:Name="PART_Track"
                                Grid.Row="0"
                                Focusable="false"
                                IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb
                                        x:Name="Thumb"
                                        Background="{TemplateBinding Foreground}"
                                        Style="{DynamicResource ScrollThumbs}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        x:Name="PageUp"
                                        Command="ScrollBar.PageDownCommand"
                                        Focusable="false"
                                        Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        x:Name="PageDown"
                                        Command="ScrollBar.PageUpCommand"
                                        Focusable="false"
                                        Opacity="0" />
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource ButtonSelectBrush}" />
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource DarkBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Width" Value="Auto" />
                                <Setter Property="Height" Value="8" />
                                <Setter TargetName="Thumb" Property="Tag" Value="Horizontal" />
                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="VerticalScrollBarVisibility" Value="Visible" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Width" Value="400" />
        </Style>

        <Style x:Key="HeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="18px" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="SubHeadlineTemplate" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12px" />
            <Setter Property="Foreground" Value="Coral" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="PanelTemplate" TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="#FF34404D" />
            <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}, Path=ActualWidth}" />
        </Style>

        <Style x:Key="DockPanelTemplate" TargetType="{x:Type DockPanel}">
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style x:Key="DirectoryListTemplate" TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="#FF34404D" />
            <Setter Property="BorderBrush" Value="#FF34404D" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="#FFED6558" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" />
        </Style>

        <DataTemplate DataType="{x:Type local:SImage}">
            <StackPanel Style="{StaticResource PanelTemplate}">
                <DockPanel>
                    <Expander DockPanel.Dock="Bottom">
                        <Grid>
                            <Label Content="TestValue" />
                        </Grid>
                    </Expander>
                    <Grid DockPanel.Dock="Top">
                        <DockPanel Style="{StaticResource DockPanelTemplate}">
                            <Label
                                Content="{Binding FileSize}"
                                DockPanel.Dock="Right"
                                Style="{StaticResource SubHeadlineTemplate}" />
                            <Label
                                Content="{Binding Name}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource HeadlineTemplate}" />
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:SDirectory}">
            <StackPanel Style="{StaticResource PanelTemplate}">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom">
                        <DockPanel Style="{StaticResource DockPanelTemplate}">
                            <Label
                                Content="{Binding Timestamp}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource SubHeadlineTemplate}" />
                        </DockPanel>
                    </Grid>
                    <Grid DockPanel.Dock="Top">
                        <DockPanel Style="{StaticResource DockPanelTemplate}">
                            <Label
                                Content="{Binding ImageList.Count}"
                                DockPanel.Dock="Right"
                                Style="{StaticResource HeadlineTemplate}" />
                            <Label
                                Content="{Binding Name}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource HeadlineTemplate}" />
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>

    <Grid
        x:Name="Pane"
        Height="Auto"
        Background="#34404D">
        <StackPanel
            x:Name="Loader"
            Visibility="Hidden"
            ZIndex="10000">
            <fa:FontAwesome
                x:Name="LoaderImage"
                HorizontalAlignment="Right"
                FontSize="20"
                Foreground="LightSlateGray"
                Icon="Cog"
                Spin="True"
                SpinDuration="10">
                <fa:FontAwesome.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform X="-85" Y="13" />
                    </TransformGroup>
                </fa:FontAwesome.RenderTransform>
            </fa:FontAwesome>
        </StackPanel>
        <Grid
            x:Name="MenuBar"
            Height="39"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="application_name"
                Grid.Column="0"
                Margin="0,2,0,-2"
                Padding="20,0,20,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="OpenTimelapseSort"
                FontSize="14px"
                FontWeight="Bold"
                Foreground="#FFFF8383" />
            <Button
                x:Name="preferences_btn"
                Width="95"
                Margin="197,7,0,3"
                Padding="10,0,10,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#FF3D4A59"
                BorderBrush="{x:Null}"
                Click="InvokePreferences"
                Content="Preferences"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <Button
                x:Name="import_btn"
                Width="95"
                Margin="296,7,0,3"
                Padding="10,0,10,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#FF3D4A59"
                BorderBrush="{x:Null}"
                Click="InvokeImportPopup"
                Content="Import new"
                Foreground="#FFFF8383">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <Ellipse
                x:Name="close_btn"
                Width="17"
                Height="17"
                Margin="1113,14,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Fill="#FFFF5252"
                MouseDown="CloseApplication" />
            <Ellipse
                x:Name="minimize_btn"
                Width="17"
                Height="17"
                Margin="1091,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="Coral"
                MouseDown="MinimizeApplication" />
            <Rectangle
                Width="667"
                Height="44"
                Margin="394,0,0,0"
                HorizontalAlignment="Left"
                Fill="#FF34404D"
                MouseDown="MoveWindow" />
        </Grid>
        <DockPanel
            x:Name="LeftPanel"
            Margin="0,44,0,0"
            Background=" #3D4A59">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ScrollViewer
                    x:Name="DirectoryViewer"
                    CanContentScroll="True"
                    PreviewMouseWheel="DirectoryViewer_OnPreviewMouseDown"
                    Style="{StaticResource ScrollViewerStyle}">
                    <ListView
                        x:Name="DirectoryViewer1"
                        Cursor="Hand"
                        IsSynchronizedWithCurrentItem="False"
                        ItemsSource="{Binding}"
                        MouseDoubleClick="DirectoryViewer1_OnMouseDoubleClick"
                        Style="{StaticResource DirectoryListTemplate}"
                        ToolTip="Double click to show images" />
                </ScrollViewer>
            </Grid>
        </DockPanel>
        <Grid DockPanel.Dock="Bottom" />
        <DockPanel
            x:Name="RightPanel"
            Margin="442,44,0,0"
            Background=" #3D4A59">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="directory_headline1"
                    Height="44"
                    Margin="0,0,-9,640"
                    Padding="20,0,20,0"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Content="No files selected!&#xA;"
                    DockPanel.Dock="Top"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White" />
                <ScrollViewer
                    x:Name="ImageViewer"
                    Width="679"
                    Margin="0,147,0,0"
                    CanContentScroll="True"
                    MouseWheel="ImageViewer_OnPreviewMouseDown"
                    Style="{StaticResource ScrollViewerStyle}">
                    <ListView
                        x:Name="ImageViewer1"
                        Width="691"
                        Height="517"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Cursor=""
                        Foreground="#FFED6558"
                        IsSynchronizedWithCurrentItem="False"
                        ItemsSource="{Binding}" />
                </ScrollViewer>
                <Label
                    x:Name="directory_prefix1"
                    Width="408"
                    Margin="21,93,0,598"
                    Padding="0,0,20,0"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    DockPanel.Dock="Top"
                    FontSize="14px"
                    FontWeight="Bold"
                    Foreground="#FFFF8383" />
            </Grid>
        </DockPanel>
        <!--  Popup Screen Elements  -->
        <Popup
            Name="Import_Popup"
            Width="Auto"
            Height="250"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="15"
                    Background="#34404D">
                    <Label
                        x:Name="import_headline1"
                        Margin="0,24,0,0"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Top"
                        Content="New Import"
                        DockPanel.Dock="Top"
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White" />
                    <TextBlock
                        x:Name="Import_Target"
                        Grid.Column="0"
                        Margin="0,2,0,-2"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        FontSize="14px"
                        FontWeight="Bold"
                        Foreground="#FFFF8383">
                        Default
                    </TextBlock>
                </DockPanel>
                <DockPanel Grid.Row="1" Margin="15">
                    <Button
                        x:Name="Choose_Directory_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Click="InvokeTargetChooser"
                        Content="Choose"
                        Foreground="#FFFF8383">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button
                        x:Name="Import_Abort_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FF3D4A59"
                        BorderBrush="{x:Null}"
                        Click="InvokeImportPopup"
                        Content="Cancel"
                        Foreground="#FFFF8383">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button
                        x:Name="Import_Confirm_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FFFF8383"
                        BorderBrush="{x:Null}"
                        Click="ConfirmImportSettings"
                        Content="Confirm"
                        Foreground="#FF3D4A59"
                        IsEnabled="False">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup
            Name="Warning_Popup"
            Width="Auto"
            Height="250"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="15"
                    Background="#34404D">
                    <Label
                        x:Name="Error_Head"
                        Margin="0,24,0,0"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Top"
                        Content=""
                        DockPanel.Dock="Top"
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White" />
                    <TextBlock
                        x:Name="Error_Desc"
                        Grid.Column="0"
                        Margin="0,2,0,-2"
                        Padding="20,0,20,0"
                        HorizontalAlignment="Left"
                        FontSize="14px"
                        FontWeight="Bold"
                        Foreground="#FFFF8383" />
                </DockPanel>
                <DockPanel Grid.Row="1" Margin="15">
                    <Button
                        x:Name="Error_Btn"
                        Width="95"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#FFFF8383"
                        BorderBrush="{x:Null}"
                        Content="Ok"
                        Foreground="#FF3D4A59">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Grid>
        </Popup>
        <Popup
            Name="Import_Progress_Popup"
            Width="Auto"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=Pane}">
            <Grid Background="#34404D">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="20"
                    Background="#34404D">
                    <Grid DockPanel.Dock="Top">
                        <Label
                            Margin="0,24,0,0"
                            Padding="20,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Content="Ready?"
                            DockPanel.Dock="Top"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="White" />
                        <TextBlock
                            x:Name="Import_Progress_Count"
                            Grid.Column="0"
                            Margin="0,2,0,-2"
                            Padding="20,0,20,0"
                            HorizontalAlignment="Left"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FFFF8383">
                            processing...
                        </TextBlock>
                    </Grid>
                    <Grid DockPanel.Dock="Bottom">
                        <TextBlock
                            x:Name="Sorting_Countdown"
                            Grid.Column="0"
                            Margin="0,2,0,-2"
                            Padding="60,0,60,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="56"
                            FontWeight="Bold"
                            Foreground="#FFFF8383">
                            10
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </Grid>
        </Popup>
    </Grid>
</Window>
